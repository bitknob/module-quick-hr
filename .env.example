# ============================================
# HRM Microservices - Common Environment Variables
# ============================================
# Copy this file to .env and update with your actual values
# All services will read from this root .env file

# ============================================
# Environment Configuration
# ============================================
NODE_ENV=development

# ============================================
# Service Ports
# ============================================
# API Gateway
API_GATEWAY_PORT=9400

# Auth Service
AUTH_SERVICE_PORT=9401

# Employee Service
EMPLOYEE_SERVICE_PORT=9402

# ============================================
# Service URLs (for API Gateway proxying)
# ============================================
AUTH_SERVICE_URL=http://localhost:9401
EMPLOYEE_SERVICE_URL=http://localhost:9402

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hrm_db
DB_USER=postgres
DB_PASSWORD=postgres

# ============================================
# MongoDB Configuration (for future chat service)
# ============================================
MONGODB_URI=mongodb://localhost:27017/hrm_db

# ============================================
# JWT Configuration
# ============================================
# IMPORTANT: Change these secrets in production to strong, random strings (minimum 32 characters)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# Email Configuration
# ============================================
# Email Provider Options: sendgrid, smtp, custom
EMAIL_PROVIDER=smtp

# SendGrid Configuration (if using SendGrid/Twilio)
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your-sendgrid-api-key-here

# SMTP Configuration (Free option - Gmail, Outlook, etc.)
# For Gmail: Use App Password (not regular password)
# Generate App Password: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here

# Email Sender Configuration
FROM_EMAIL=noreply@hrm.com
FROM_NAME=HRM System

# Custom Domain Email (Optional)
# If set, emails will be sent from: yourname@CUSTOM_EMAIL_DOMAIN
# Example: If CUSTOM_EMAIL_DOMAIN=mycompany.com, emails from: hrm.system@mycompany.com
CUSTOM_EMAIL_DOMAIN=

# ============================================
# Frontend Configuration
# ============================================
# Frontend URL (for email verification and password reset links)
FRONTEND_URL=http://localhost:3000

# ============================================
# Logging Configuration
# ============================================
# Log Levels: error, warn, info, debug
LOG_LEVEL=info

# Service Names (for logging)
SERVICE_NAME_AUTH=auth-service
SERVICE_NAME_EMPLOYEE=employee-service
SERVICE_NAME_GATEWAY=api-gateway
